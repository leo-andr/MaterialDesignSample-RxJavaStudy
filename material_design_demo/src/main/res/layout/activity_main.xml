<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         >
         <TextView
             android:id="@+id/btn_bottom_sheet"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="@string/bottomsheetdialog"
             android:gravity="center"
             />

         <TextView
             android:id="@+id/btn_toolbar"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="@string/toolbar_title"
             android:gravity="center"
             />

         <TextView
             android:id="@+id/btn_appbar_layout"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="CoordinatorLayout + AppbarLayout"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/btn_appbar_layout1"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="AppbarLayout 实践之仿简书首页效果"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/swipe_btn"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="SwipeDismissBehavior示例"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/bottom_sheet_demo"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="BottomSheetBehavior示例"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/fab_snack_btn"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="FAB、Snackbar 示例"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/custom_behavior"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="自定义Behavior(一)"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/custom_behavior2"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="自定义Behavior(二)，仿开眼首页"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/tab_layout_simple1"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text=" TabLayout示例(一)"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/tab_layout_simple2"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text=" TabLayout+ViewPager+fragment"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/bottom_navigaiton_simple"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text=" BottomNavigationView示例"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/text_input_simple"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text=" TextInputLayout"
             android:gravity="center"
             />
         <TextView
             android:id="@+id/card_view_simple"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text=" CardView"
             android:gravity="center"
             />
     </LinearLayout>

</ScrollView>
